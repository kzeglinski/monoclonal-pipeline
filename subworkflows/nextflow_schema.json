{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/YOUR_PIPELINE/master/nextflow_schema.json",
    "title": "Nextflow pipeline parameters",
    "description": "This pipeline uses Nextflow and processes some kind of data. The JSON Schema was built using the nf-core pipeline schema builder.",
    "type": "object",
    "definitions": {
        "main_parameters": {
            "title": "Main parameters",
            "type": "object",
            "description": "",
            "default": "",
            "properties": {
                "fastq_dir": {
                    "type": "string",
                    "description": "The directory containing your .fastq files",
                    "format": "directory-path",
                    "help_text": "Usually this is the path to the fastq_pass folder that contains a folder for each barcode, with arbitrarily many fastqs inside each barcode folder"
                },
                "out_dir": {
                    "type": "string",
                    "description": "Directory to write the output to",
                    "format": "directory-path"
                },
                "sample_sheet": {
                    "type": "string",
                    "description": "Path to your sample sheet",
                    "format": "file-path",
                    "help_text": "format of the sample sheet should be barcode,well,sample_name,notes; where notes are either 'Empty Well' or 'irrelevant phage'"
                },
                "vector_type": {
                    "type": "string",
                    "description": "The type of vector, should match the flank file",
                    "default": "antibody"
                }
            },
            "required": [
                "fastq_dir",
                "out_dir",
                "sample_sheet",
                "vector_type"
            ]
        },
        "advanced_settings": {
            "title": "Advanced settings",
            "type": "object",
            "description": "Shouldn't need to change these!",
            "default": "",
            "properties": {
                "igblast_databases": {
                    "type": "string",
                    "description": "Location of IgBLAST databases for annotation",
                    "format": "directory-path"
                },
                "irrelevant_reference": {
                    "type": "string",
                    "description": "FASTA reference for the irrelevant phage control",
                    "format": "file-path",
                    "default": "$projectDir/references/irrelevant_ref.fa"
                },
                "flanking_sequences": {
                    "type": "string",
                    "description": "Path to the flanking sequence file for extraction of VH/VL",
                    "default": "$projectDir/references/flanking.csv",
                    "format": "file-path"
                },
                "rotate_sequence": {
                    "type": "string",
                    "default": "TTTACACTTTATGCTTCCGGCTCGTATGTTG",
                    "description": "A sequence located in the plasmid that is used to rotate the reads (default: lac promoter)"
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$defs/main_parameters"
        },
        {
            "$ref": "#/$defs/advanced_settings"
        }
    ]
}